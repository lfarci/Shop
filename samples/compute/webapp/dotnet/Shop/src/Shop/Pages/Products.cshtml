@page
@model ProductsModel
@{
    ViewData["Title"] = "Products";
}

<div>
    <h1>Products</h1>

    <form method="post" class="mt-3">
        <div class="row align-items-center">
            <div class="col">
                <div class="form-group">
                    <input asp-for="Product!.Name" class="form-control" placeholder="Name" />
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <input asp-for="Product!.Amount" class="form-control" placeholder="Amount" type="number" />
                </div>
            </div>

            <div class="col">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">€</div>
                    </div>
                    <input asp-for="Product!.Price" class="form-control" placeholder="Price" type="number" />
                </div>
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-primary btn-block">Add</button>
            </div>
        </div>
    </form>

    <table class="table table-bordered mt-3">
        <thaed>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Price</th>
            </tr>
        </thaed>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Amount</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>

</div>
